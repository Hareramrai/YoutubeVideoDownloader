<div class="page-header">
  <h3>Video Downloader</h3>
  <p>Right click on the below link and save it.</p>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Count</th>
      <th>Download Link</th>
    </tr>
  </thead>
  <tbody>
  <% if @download_urls.blank? %>
  <tr>
     <td colspan="2" class="center"> NO download links found <%= link_to "try another link",root_path %> </td>
   </tr>
  <% else%> 
  <% @download_urls.each_with_index do |url,index|%>
   <tr>
     <td><%= index+1 %></td>
     <td><%= link_to "Download link #{index+1}",url%> </td>
   </tr>
  <% end%>
 <% end%>
  </tbody>
</table>
